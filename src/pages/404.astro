---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import { posts } from '../data/posts';

// Get featured posts for suggestions
const featuredPosts = posts.filter(post => post.featured).slice(0, 3);
---

<Layout 
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist. Explore our blog posts or head back home."
>
  <section class="min-h-[80vh] flex items-center justify-center px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <!-- Main 404 Message -->
      <div class="text-center mb-16">
        <div class="mb-8 flex justify-center">
          <img 
            src="/404.gif" 
            alt="404 Error"
            class="w-60 h-60 object-contain"
          />
        </div>
        <h1 class="text-6xl sm:text-7xl font-bold light:text-gray-900 dark:text-neutral-100 mb-4">
          404
        </h1>
        <h2 class="text-2xl sm:text-3xl font-semibold light:text-gray-700 dark:text-neutral-300 mb-6">
          You're <span class="text-primary-500">overloaded</span> the wrong page
        </h2>
        <p class="text-lg light:text-gray-600 dark:text-neutral-400 mb-8 max-w-md mx-auto">
          The page you're looking for doesn't exist. Maybe it's taking a mental health break?
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/" 
            class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-full text-white bg-primary-500 hover:bg-primary-600 transition-colors"
          >
            Go Home
          </a>
          <a 
            href="/blog" 
            class="inline-flex items-center justify-center px-8 py-3 border light:border-gray-300 dark:border-neutral-700 text-base font-medium rounded-full light:text-gray-900 dark:text-neutral-100 light:hover:border-gray-400 dark:hover:border-neutral-600 light:hover:bg-gray-50 dark:hover:bg-neutral-900 transition-colors"
          >
            Read the Blog
          </a>
        </div>
      </div>

      <!-- Suggested Posts -->
      <div class="mt-16">
        <h3 class="text-2xl font-bold light:text-gray-900 dark:text-neutral-100 mb-6 text-center">
          Or Check Out These Posts
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {featuredPosts.map((post) => (
            <a 
              href={`/blog/${post.slug}`}
              class="group block light:bg-white dark:bg-white/5 rounded-xl overflow-hidden border light:border-gray-200 dark:border-white/10 hover:light:border-primary hover:dark:border-primary transition-all duration-300"
            >
              <div class="aspect-video overflow-hidden">
                <Image 
                  src={post.image} 
                  alt={post.title}
                  width={400}
                  height={225}
                  format="webp"
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              
              <div class="p-5">
                <div class="flex items-center gap-2 text-xs mb-3">
                  <span class="px-2 py-1 rounded-full light:bg-gray-100 dark:bg-white/5 light:text-gray-600 dark:text-gray-400">
                    {post.category}
                  </span>
                  <span class="light:text-gray-400 dark:text-gray-500">{post.readTime}</span>
                </div>
                
                <h3 class="text-lg font-bold light:text-gray-900 dark:text-white mb-2 group-hover:text-primary transition-colors line-clamp-2">
                  {post.title}
                </h3>
                
                <p class="text-sm light:text-gray-600 dark:text-gray-400 line-clamp-2">
                  {post.excerpt}
                </p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>
