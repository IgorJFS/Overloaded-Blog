---
import Layout from '../layouts/Layout.astro';

const currentYear = new Date().getFullYear();
const lastUpdated = new Date().toLocaleDateString('en-US', { 
  month: 'long', 
  day: 'numeric', 
  year: 'numeric' 
});
---

<Layout 
  title="Terms of Service - Overloaded"
  description="Terms of Service for Overloaded blog. Read our terms and conditions for using our website."
